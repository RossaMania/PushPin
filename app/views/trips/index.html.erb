<div class="flex flex-col">
<p style="color: green"><%= notice %></p>

<h1 class="text-4xl font-bold p-2 m-auto">Trips</h1>

<div id="trips" class="grid grid-cols-3 gap-4">
  <% @trips.each do |trip| %>
    <div class="m-6 flex flex-col items-center border-2 border-slate-200 hover:border-4 hover:border-violet-700 hover:scale-110">
      <%= render trip %>
      <p class="m-4">
        <%= link_to "Show Trip!", trip, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </p>
    </div>
  <% end %>
</div>

<div class="m-6 flex flex-col items-center justify-end gap-x-6">
<%= link_to "Add New Trip!", new_trip_path, class: "text-xl leading-6 text-gray-800 hover:underline hover:text-violet-700 hover:semibold" %>
</div>
</div>
