<div class="flex flex-col">
<p style="color: green"><%= notice %></p>

<h1 class="text-4xl font-bold p-2 m-auto">Trips</h1>

<div id="trips" class="grid grid-cols-4">
  <% @trips.each do |trip| %>
    <div class="m-6 flex flex-col items-center justify-end">
      <%= render trip %>
      <p>
        <%= link_to "Show Trip!", trip, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </p>
    </div>
  <% end %>
</div>

<div class="mt-6 flex flex-col items-center justify-end gap-x-6">
<%= link_to "Add New Trip!", new_trip_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
</div>
</div>
