<p style="color: green"><%= notice %></p>

<div class="flex flex-row">

<div>
<%= render @trip %>
</div>

<div class="border-2 border-slate-200">

<div class="m-4 border-b border-gray-900/10 pb-8">

<div>
  <p class="text-xl font-normal">Places on this trip:</p>
  <h2  class="block text-3xl text-center font-black leading-loose text-gray-900"><%= @places.count %></h2>
</div>

<div class="p-2">
  <%= button_to "Add Place!", new_trip_place_path(@trip), method: :get, class: "text-sm font-semibold leading-6 text-gray-900" %>
</div>

<div class="p-2">
  <%= link_to "Show Places!", trip_places_path(@trip), class: "text-sm font-semibold leading-6 text-gray-900" %>
</div>

</div>

<br>

<div class="m-4 flex items-center justify-end gap-x-6 p-4">
  <%= link_to "Edit Trip!", edit_trip_path(@trip), class: "text-sm font-semibold leading-6 text-gray-900" %> |
  <%= link_to "Go Back!", trips_path, class: "text-sm font-semibold leading-6 text-gray-900" %>

  <%= button_to "Destroy Trip!", @trip, method: :delete, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
</div>

</div>

</div>
